{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/lib/loaders"
    ],
    "paths": {
      "lib/*": ["src/lib/*"],
      "features": ["src/features"]
    }
  },
  "include": ["./src", "./@types"],
  "files": ["src/index.ts"]
}
