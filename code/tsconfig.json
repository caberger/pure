{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "allowJs": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/lib/loaders"
    ],
    "paths": {
      "lib/*": ["src/lib/*"],
      "features/*": ["src/features/*"],
      "components/*": ["src/components/*"]
    }
  },
  "include": ["./src", "./@types", "data/create-test-data.mjs"],
  "files": ["src/index.ts"]
}
